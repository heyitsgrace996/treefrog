<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Treefrog.Views.SplashPage"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start" HorizontalOptions="CenterAndExpand">
            
            
            
            <!-- Display the animated GIF -->
            <Image x:Name="treefrog_fly"
                   Source="treefrog_tongue.gif" WidthRequest="500" HeightRequest="500" 
                   IsAnimationPlaying="True"/>
            
            <Label 
                Text="Treefrog Coffee"
                Style="{StaticResource HeadingLabel}"
                VerticalOptions="Center"/>
            
            <Label 
                Text="Steaming the milk and grinding the beans..."
                Style="{StaticResource SubHeadingLabel}"
                VerticalOptions="Center"
                
            />
            <ProgressBar x:Name="progressBar" VerticalOptions="End" Progress="0" WidthRequest="200" HeightRequest="10" IsVisible="True"
                         ProgressColor="YellowGreen" Margin="20, 40"/>
            
            
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>