<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:local="clr-namespace:Treefrog.Views"
             x:Class="Treefrog.Views.ProfilePage"
             ControlTemplate="{StaticResource BaseButtonTemplate}"
             Style="{StaticResource MainPage}">
    <StackLayout Padding="50">
        <Label Text="Profile" FontSize="Title" HorizontalOptions="Center" Margin="0,20,0,10"/>
        
        <Label Text="Name:"/>
        <Entry Text="{Binding UserName, Mode=TwoWay}" Placeholder="Enter your name"/>
        
        <Label Text="Email:"/>
        <Entry Text="{Binding UserEmail, Mode=TwoWay}" Placeholder="Enter your email"/>
        
        <Label Text="Phone:"/>
        <Entry Text="{Binding UserPhone, Mode=TwoWay}" Placeholder="Enter your phone number"/>

        <Button Text="Save" Clicked="OnSaveButtonClicked" HorizontalOptions="Center" Margin="0,20,0,0"/>
    </StackLayout>
</ContentPage>
