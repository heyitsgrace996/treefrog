<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:local="clr-namespace:Treefrog.Views"
             x:Class="Treefrog.Views.OrderConfPage"
             ControlTemplate="{StaticResource BaseButtonTemplate}"
             Style="{StaticResource MainPage}">


    <ScrollView>
        <StackLayout>
        <Label 
            Text="Thank you for your Order!" Style="{StaticResource HeadingLabel}" VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
                Text="Give your order number at the register to collect your tasty treats." Style="{StaticResource SubHeadingLabel}" VerticalOptions="Center" 
                HorizontalOptions="Center" />

            </StackLayout>
        </ScrollView>
</ContentPage>
